<?xml version="1.0" encoding="utf-8"?>
<browserconfig>
    <msapplication>
        <tile>
            <square70x70logo src="/favicon.svg"/>
            <square150x150logo src="/favicon.svg"/>
            <square310x310logo src="/favicon.svg"/>
            <wide310x150logo src="/favicon.svg"/>
            <TileColor>#4F46E5</TileColor>
        </tile>
        <notification>
            <polling-uri src="https://example.com/api/notifications/polling"/>
            <frequency>30</frequency>
            <cycle>1</cycle>
        </notification>
        <badge>
            <polling-uri src="https://example.com/api/notifications/badge"/>
            <frequency>30</frequency>
        </badge>
    </msapplication>
</browserconfig>